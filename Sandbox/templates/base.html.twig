						<ul
							class="list-unstyled">
							<li>
								<a
									href="#"
									>{{ 'footer.support.help_assistance'|trans }}</a
								>
							</li>
							<li>
								<a
									href="#"
									>{{ 'footer.support.api_documentation'|trans }}</a
								>
							</li>
							<li>
								<a
									href="#"
									>{{ 'footer.support.developer_center'|trans }}</a
								>
							</li>
							<li>
								<a
									href="#"
									>{{ 'footer.support.service_status'|trans }}</a
								>
							</li>
						</ul>
					</div>
					<div
						class="col-lg-2 col-md-6 mb-4">
						<h6>
							{{ 'footer.legal_title'|trans }}
						</h6>
						<ul
							class="list-unstyled">
							<li>
								<a
									href="#"
									>{{ 'footer.legal.privacy_policy'|trans }}</a
								>
							</li>
							<li>
								<a
									href="#"
									>{{ 'footer.legal.terms_of_use'|trans }}</a
								>
							</li>
							<li>
								<a
									href="#"
									>{{ 'footer.legal.legal_notices'|trans }}</a
								>
							</li>
							<li>
								<a
									href="#"
									>{{ 'footer.legal.gdpr'|trans }}</a
								>
							</li>
						</ul>
					</div>
				</div>
				<div
					class="copyright">
					<p>
						&copy;
						{{ "now"|date("Y") }}
						DATA UEMOA - {{ 'footer.copyright'|trans }}
					</p>
				</div>
			</div>
		</footer>

		<!-- Quick Actions Bar Component -->
		{% include 'tools/QuickActionsBar.html.twig' %}

		<script
			src="{{ asset('js/QuickActionsBar.js') }}"
		>
		</script>
	</body>
</html>
