							<li>
								<a
									href="#"
									>{{ 'footer.services.api_integration'|trans }}</a
								>
							</li>
						</ul>
					</div>
					<div
						class="col-lg-2 col-md-6 mb-4">
						<h6>
							{{ 'footer.markets_title'|trans }}
						</h6>
						<ul
							class="list-unstyled">
							<li>
								<a
									href="#"
									>{{ 'navbar.currencies'|trans }}</a
								>
							</li>
							<li>
								<a
									href="#"
									>{{ 'navbar.stocks'|trans }}</a
								>
							</li>
							<li>
								<a
									href="#"
									>{{ 'navbar.cryptocurrencies'|trans }}</a
								>
							</li>
							<li>
								<a
									href="#"
									>{{ 'navbar.metals'|trans }}</a
								>
							</li>
						</ul>
					</div>
					<div
						class="col-lg-2 col-md-6 mb-4">
						<h6>
							{{ 'footer.support_title'|trans }}
